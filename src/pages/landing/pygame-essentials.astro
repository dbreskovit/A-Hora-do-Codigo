---
import Layout from '~/layouts/LandingLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';

const metadata = {
  title: 'Dicas E Conceitos Para Melhores Resultados Na BugCup',
};
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Gamedev com Python"
    title="Desenvolvimento de jogos com Pygame (Python)"
    subtitle="Aprenda a desenvolver jogos com Pygame, uma biblioteca de jogos para Python."
    actions={[
      {
        variant: 'primary',
        text: 'Inscreva-se',
        href: 'https://abre.ai/pygame25',
        icon: 'tabler:square-rounded-arrow-right'
      },
    ]}
    image={{
      src: '/images/pygame.gif',
      alt: 'Ilustração de um workshop de Python',
    }}
  />
</Layout>
