---
import Layout from '~/layouts/LandingLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';

const metadata = {
  title: 'Dicas E Conceitos Para Melhores Resultados Na BugCup',
};
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Dicas BugCup"
    title="Dicas para você se dar bem no BugCup"
    subtitle="Confira algumas dicas para você se dar bem no BugCup e garantir sua vaga na próxima etapa."
    actions={[
      {
        variant: 'primary',
        text: 'Acessar Material',
        href: 'https://github.com/marcobabinski/oficina-bugcup-24',
        icon: 'tabler:brand-github',
      },
    ]}
    image={{
      src: '/images/bug.png',
      alt: 'Imagem do logo da BugCup',
    }}
  />
</Layout>
